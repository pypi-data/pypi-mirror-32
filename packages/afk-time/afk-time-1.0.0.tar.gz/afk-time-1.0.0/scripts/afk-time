#!/usr/bin/env bash
{ set +x; } 2>/dev/null

usage="usage: ${BASH_SOURCE[0]##*/}"

[[ $1 == "--help" ]] && echo "$usage" && exit

[[ $OSTYPE != *"darwin"* ]] && echo "ERROR: OSX only" && exit 1

export LC_ALL=C # export required
ioreg -c IOHIDSystem | perl -ane 'if (/Idle/) {$idle=(pop @F)/1000000000; print $idle,"\n"; last}' | xargs printf "%1.f"

