#!python -u

import sys
from fmtlabels.fmt import merge_nlp_label

if len(sys.argv) < 2:
    raise Exception('Usage: lblcsv2json <category> [input [output]]')

category = sys.argv[1]
input = open(sys.argv[2], 'r') if len(sys.argv) >= 3 else sys.stdin
output = open(sys.argv[3], 'w') if len(sys.argv) >= 4 else sys.stdout

merge_nlp_label(category, input, output)
