import argparse
from toktokkie import Directory
from toktokkie.iconizing import procedures, default_procedure


def main():
    """
    The toktokkie-iconize main method
    :return: None
    """
    procedure_names = list(map(lambda x: x.name, procedures))

    parser = argparse.ArgumentParser()
    parser.add_argument("directories", nargs="+",
                        help="The directories to iconize. "
                             "Files and directories that do not contain any "
                             "valid metadata configuration will be ignored.")
    parser.add_argument("procedure", choices=set(procedure_names), nargs="?",
                        default=default_procedure().name,
                        help="The naming scheme to use")
    args = parser.parse_args()

    directories = args.directories
    procedure = list(filter(lambda x: x.name == args.procedure, procedures))[0]

    for path in directories:

        try:
            directory = Directory(path)
            directory.iconize(procedure)
        except ValueError:
            print("Iconizing of " + path + "failed")


if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("Thanks for using toktokkie!")
